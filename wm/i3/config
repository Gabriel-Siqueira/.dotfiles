# Basic Config {{{

font pango:DejaVu Sans Mono 8
# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod
#keyboard layout
setxkbmap br
# no bar on single windom
new_window pixel
# hide border on screen edge
hide_edge_borders smart

# }}}
# Variables {{{

set $mod        Mod4
set $terminal   terminator
set $Sterminal  terminology
set $Cterminal  terminator --profile=Fish
set $menu       "rofi -matching fuzzy -show run -font 'Michroma 15' -location 1 -columns 5 -lines 1 -width 100 -color-enable -color-window '#222222,#222222,#00ff00' -opacity '100' -separator-style 'solid' -color-normal '#222222, #eeeeee,#222222,#444444,#eeeeee'"
set $Smenu      dmenu_run
set $screenShot xfce4-screenshot

# }}}
# keys {{{

# start a terminal {{{
bindsym $mod+Return         exec $terminal
bindsym $mod+Shift+Return   exec $Sterminal
bindsym $mod+Control+Return exec $Cterminal
# }}}
# start applications menus {{{
bindsym $mod+d       exec $menu
bindsym $mod+Shift+d exec $Smenu
# }}}
# close window {{{
bindsym $mod+BackSpace kill
# }}}
# focus {{{
bindsym $mod+h     focus left
bindsym $mod+j     focus down
bindsym $mod+k     focus up
bindsym $mod+l     focus right
bindsym $mod+Left  focus left
bindsym $mod+Down  focus down
bindsym $mod+Up    focus up
bindsym $mod+Right focus right
bindsym $mod+p focus parent
bindsym $mod+c focus child
# }}}
# move {{{
bindsym $mod+Shift+h     move left
bindsym $mod+Shift+j     move down
bindsym $mod+Shift+k     move up
bindsym $mod+Shift+l     move right
bindsym $mod+Shift+Left  move left
bindsym $mod+Shift+Down  move down
bindsym $mod+Shift+Up    move up
bindsym $mod+Shift+Right move right
# }}}
# resize {{{
bindsym $mod+r mode "resize"
mode "resize" {
# focus {{{
    bindsym $mod+h     focus left
    bindsym $mod+j     focus down
    bindsym $mod+k     focus up
    bindsym $mod+l     focus right
    bindsym $mod+Left  focus left
    bindsym $mod+Down  focus down
    bindsym $mod+Up    focus up
    bindsym $mod+Right focus right
# }}}
# move {{{
    bindsym $mod+Shift+h     move left
    bindsym $mod+Shift+j     move down
    bindsym $mod+Shift+k     move up
    bindsym $mod+Shift+l     move right
    bindsym $mod+Shift+Left  move left
    bindsym $mod+Shift+Down  move down
    bindsym $mod+Shift+Up    move up
    bindsym $mod+Shift+Right move right
# }}}
        bindsym h     resize shrink width  10 px or 10 ppt
        bindsym j     resize grow   height 10 px or 10 ppt
        bindsym k     resize shrink height 10 px or 10 ppt
        bindsym l     resize grow   width  10 px or 10 ppt
        bindsym Left  resize shrink width  10 px or 10 ppt
        bindsym Down  resize grow   height 10 px or 10 ppt
        bindsym Up    resize shrink height 10 px or 10 ppt
        bindsym Right resize grow   width  10 px or 10 ppt
        bindsym Escape mode "default"
}
# }}}
# split containers {{{
# split in vertical orientation
bindsym $mod+v split v
bindsym $mod+space mode "layout"
mode "layout" {
#move
    bindsym h     focus left
    bindsym j     focus down
    bindsym k     focus up
    bindsym l     focus right
    bindsym Left  focus left
    bindsym Down  focus down
    bindsym Up    focus up
    bindsym Right focus right
#move
    bindsym Shift+h     move left
    bindsym Shift+j     move down
    bindsym Shift+k     move up
    bindsym Shift+l     move right
    bindsym Shift+Left  move left
    bindsym Shift+Down  move down
    bindsym Shift+Up    move up
    bindsym Shift+Right move right
# enter fullscreen mode for the focused container
    bindsym f fullscreen
# change container layout (stacked, tabbed, toggle split)
    bindsym s layout stacking
    bindsym t layout tabbed
    bindsym r layout toggle split
# toggle tiling / floating
    bindsym Shift+f floating toggle
# change focus between tiling / floating windows
    bindsym f focus mode_toggle
# focus the parent container
    bindsym p focus parent
# focus the child container
    bindsym c focus child
# back to normal
    bindsym Escape mode "default"
}
# }}}
# workspaces {{{
#  .     dev      mail
# aux    default  web
# midia  vm       docs
# game
# switch to workspace {{{
bindsym $mod+Mod2+KP_0 workspace game
bindsym $mod+Mod2+KP_1 workspace midia
bindsym $mod+Mod2+KP_2 workspace vm
bindsym $mod+Mod2+KP_3 workspace docs
bindsym $mod+Mod2+KP_4 workspace aux
bindsym $mod+Mod2+KP_5 workspace default
bindsym $mod+Mod2+KP_6 workspace web
bindsym $mod+Mod2+KP_7 workspace .
bindsym $mod+Mod2+KP_8 workspace dev
bindsym $mod+Mod2+KP_9 workspace mail
bindsym $mod+KP_Insert    workspace [r]game
bindsym $mod+KP_End       workspace [r]midia
bindsym $mod+KP_Down      workspace [r]vm
bindsym $mod+KP_Page_Down workspace [r]docs
bindsym $mod+KP_Left      workspace [r]aux
bindsym $mod+KP_Begin     workspace [r]default
bindsym $mod+KP_Right     workspace [r]web
bindsym $mod+KP_Home      workspace [r].
bindsym $mod+KP_Up        workspace [r]dev
bindsym $mod+KP_Page_Up   workspace [r]mail
bindsym $mod+0 workspace 0
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
# }}}
# move focused container to workspace {{{
bindsym $mod+Shift+Mod2+KP_Insert    move container to workspace game
bindsym $mod+Shift+Mod2+KP_End       move container to workspace midia
bindsym $mod+Shift+Mod2+KP_Down      move container to workspace vm
bindsym $mod+Shift+Mod2+KP_Page_Down move container to workspace docs
bindsym $mod+Shift+Mod2+KP_Left      move container to workspace aux
bindsym $mod+Shift+Mod2+KP_Begin     move container to workspace default
bindsym $mod+Shift+Mod2+KP_Right     move container to workspace web
bindsym $mod+Shift+Mod2+KP_Home      move container to workspace .
bindsym $mod+Shift+Mod2+KP_Up        move container to workspace dev
bindsym $mod+Shift+Mod2+KP_Page_Up   move container to workspace mail
bindsym $mod+Shift+KP_Insert    move container to workspace [r]game
bindsym $mod+Shift+KP_End       move container to workspace [r]midia
bindsym $mod+Shift+KP_Down      move container to workspace [r]vm
bindsym $mod+Shift+KP_Page_Down move container to workspace [r]docs
bindsym $mod+Shift+KP_Left      move container to workspace [r]aux
bindsym $mod+Shift+KP_Begin     move container to workspace [r]default
bindsym $mod+Shift+KP_Right     move container to workspace [r]web
bindsym $mod+Shift+KP_Home      move container to workspace [r].
bindsym $mod+Shift+KP_Up        move container to workspace [r]dev
bindsym $mod+Shift+KP_Page_Up   move container to workspace [r]mail
bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 10
# }}}
# }}}
# quit, reload, restart, lock {{{
#lock screen
bindsym $mod+KP_Delete    exec i3lock -i /home/gabriel/Pictures/dragon.png
bindsym $mod+KP_Separator exec i3lock -i /home/gabriel/Pictures/dragon.png
# reload the configuration file
bindsym $mod+e reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"
# }}}
# Special keys {{{ 
#Print screen
bindsym Print exec $screenShot
#volume
bindsym XF86AudioRaiseVolume exec amixer set Master 5%+
bindsym XF86AudioLowerVolume exec amixer set Master 5%-
#brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 5
bindsym XF86MonBrightnessUp   exec xbacklight -inc 5
# }}}
# bar {{{
# bar toggle, hide or show 
bindsym $mod+b bar mode toggle
# }}}

