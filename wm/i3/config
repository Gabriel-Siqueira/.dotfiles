# i3bar {{{

bar {
    status_command $HOME/bin/conky-i3bar
    position top
    workspace_buttons yes
    binding_mode_indicator yes
    font pango:Terminus 11px
    colors{
        background #333333
        statusline #eeeeee
        separator #666666
#       <colorclass>       <border> <background> <text>
        focused_workspace  #00ff00    #0000ee    #ffff00
        active_workspace   #000000    #0000ee    #ffff00
        inactive_workspace #000000    #000066    #bbbb00
        urgent_workspace   #000000    #ff0000    #ffff00
        binding_mode       #333333    #333333    #ff5500

    }
}

