Config { --"-*-Fixed-Bold-R-Normal-*-13-*-*-*-*-*-*-*"

		-- appearance
			font = "xft:termsyn:Bold:size=10"
		, borderColor  = "gray"
		, border       = FullB
		, bgColor      = "black"
		, fgColor      = "grey"
		, position     = Top

		-- layout
		, sepChar  = "%"   -- delineator between plugin names and straight text
		, alignSep = "}{"  -- separator between left-right alignment
		, template = "                 %StdinReader% }{| <fc=#9900cc>%uname% </fc>|<fc=yellow>⚛: </fc> %cpu% |<fc=yellow>⚅: </fc> %memory% | <fc=yellow>⚡: </fc>%battery% | <fc=yellow>♫: </fc> %myvolume% | <fc=yellow>☎: </fc> %dynnetwork% | <fc=#9900cc>%date%</fc> "

		-- general behavior
		, lowerOnStart     = True    -- send to bottom of window stack on start
		, hideOnStart      = False   -- start with window unmapped (hidden)
		, allDesktops      = True    -- show on all desktops
		, overrideRedirect = True    -- set the Override Redirect flag (Xlib)
		, pickBroadest     = False   -- choose widest display (multi-monitor)
		, persistent       = True    -- enable/disable hiding (True = disabled)

		, commands = [    Run DynNetwork     [ "--template" , "<tx>kB/s|<rx>kB/s"
		                         , "--Low"      , "500000"       -- units: kB/s
                             , "--High"     , "5000000"       -- units: kB/s
                             , "--low"      , "green"
                             , "--normal"   , "orange"
                             , "--high"     , "red"
                             ] 10
										, Run Cpu ["-L","3","-H","50","--normal","green","--high","red"] 10
										, Run MultiCpu       [ "--template" , "<total0>%|<total1>%"
                             , "--Low"      , "50"         -- units: %
                             , "--High"     , "85"         -- units: %
                             , "--low"      , "darkgreen"
                             , "--normal"   , "darkorange"
                             , "--high"     , "darkred"
                             ] 10
										, Run Memory [ "--template" ,"<usedratio>%"
                             , "--Low"      , "20"        -- units: %
                             , "--High"     , "90"        -- units: %
                             , "--low"      , "green"
                             , "--normal"   , "orange"
                             , "--high"     , "red"
                             ] 10
										-- , Run Swap [] 10
										, Run Com "uname" ["-s","-r"] "" 36000
										, Run Date "%a %b %_d %Y %H:%M:%S" "date" 10
										, Run StdinReader
										, Run Battery [ "--template" , "<acstatus>", "--Low", "20", "--High", "80", "--low", "red", "--normal", "orange", "--high", "green", "--", "-o", "<left>%", "-O"	,"<fc=#dAA520><left>% ...</fc>", "-i", "<fc=green><left>% ✓</fc>"] 50
										, Run Com "/bin/bash" ["-c", "~/.xmonad/volume.sh" ] "myvolume" 10
								 ]
}